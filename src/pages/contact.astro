--- 
import Image from "astro/components/Image.astro"
import ContactForm from "../components/ContactForm.astro"
import LinkButton from "../components/LinkButton.astro"
import Button from "../components/Button.astro"
import BaseLayout from "../layouts/BaseLayout.astro"
import emailGraphic from "../assets/emailGraphic.jpg"
---

<BaseLayout>
    <div class="h-64 md:h-96 relative">
        <Image class="bannerImg w-full" src={emailGraphic} alt="">
        <div class="gray-overlay absolute top-0 w-full h-full 0 flex flex-col justify-center items-center text-white">
            <h1 class="font-bold  text-2xl md:text-6xl">Contact</h1>
        </div>
    </div>
    <section class="m-auto max-w-screen-lg py-24">
        <div class="m-auto max-w-screen-lg flex mb-10">
            <p class="md:text-2xl">Need a design hero? You've found one! Send me a message, and I'll fly in to save the day.ü¶∏üèø Fill out the form below!</p>
        </div>
        <ContactForm></ContactForm>   
    </section>
</BaseLayout>

<style>
    img {
       object-fit: cover;
       width: 100%;
       height: 100%;
    }
    .gray-overlay {
        scale: 1.0;
        border-width: 1px;
        border-style: solid;
        border-image-source: linear-gradient(
        180deg,
        hsl(0deg 0% 100% / 1) 0%,
        hsla(0, 0%, 73%, 0.9) 30%,
        hwb(0 43% 57% / 0.9) 97%
        );
        border-image-slice: fill 1;
    }
</style>