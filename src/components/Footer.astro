---
import { Icon } from 'astro-icon/components'
import LinkButton from "../components/LinkButton.astro"

const indexPath = Astro.url.origin;

let currentDate = new Date();
let currentYear = currentDate.getFullYear();
---

<footer class="bg-zinc-900 text-white">
    <div class="flex flex-col md:flex-row md:justify-between gap-14 align-center text-center md:text-left m-auto max-w-screen-xl">
        <div class="flex flex-col gap-5">
            <p class="text-3xl font-bold">Aris Mercedes</p>
            <p class="w-[28ch] m-auto">Driven graphic designer in Dallas, Texas.</p>
            <p>&copy{currentYear} Aris Mercedes <br> All Rights Reserved</p>
        </div>
        <ul class="flex flex-col gap-5 capitalize text-xl">
            <li><a href="/">Home</a></li>
            <li><a href="/work">Work</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
        </ul>
        <LinkButton classes="self-center md:self-baseline" url="/contact" theme='light'>Say Hi</LinkButton>
    </div>
</footer>

<style>
    li a{
        transition: color .3s ease-in-out;
    }
    li a:hover {
        color: rgb(var(--primary));
    }
</style>