--- 
 const { classes} = Astro.props;
---

<div class:list={[classes]}>
    <slot />
</div>

<style lang="scss">
    div {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
        @media screen and (min-width: 768px) {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    .gap-s {
        gap: 1rem;
    }
</style>