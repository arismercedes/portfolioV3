---
import { Image } from "astro:assets";
import LinkButton from "./LinkButton.astro";

const {title, type, thumbnailUrl, thumbnailAlt, url} = Astro.props
---
<div class="flex flex-col items-start project"> 
    <a href={url} class="img-wrapper"><Image src={thumbnailUrl} alt={thumbnailAlt} width="1200" height="600"/></a>
    <h3 class="text-3xl font-bold mt-8">{title}</h3>
    <p class="text-sm uppercase mt-2">{type}</p>
    <LinkButton classes="" url={url} isnaked theme="dark" size="sm">View Work</LinkButton>
</div>

<style>
    .img-wrapper {
        width: 100%;
    }
    img {
        object-fit: cover;
        width: 100%;
        aspect-ratio: 4/3;
    }
</style>
